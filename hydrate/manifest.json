{
  "manifest_version": 3,
  "name": "Hydrate — Smart Water Reminders",
  "version": "1.0.0",
  "description": "A beautiful, lightweight reminder to drink the right amount of water — with a sleek progress UI and gentle notifications.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "alarms", "notifications"]
}
